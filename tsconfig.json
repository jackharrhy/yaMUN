{
  "compilerOptions": {
    "lib": ["es2020"],
    "jsx": "react",
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
